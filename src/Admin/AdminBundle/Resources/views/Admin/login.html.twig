<!DOCTYPE html>
<html lang="en">
   <head>
      <meta charset="utf-8">
      <title>Login : {{ site_name }}</title>

      <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
      <meta name="apple-mobile-web-app-capable" content="yes">
      <link href="{{ asset('bundles/adminadmin/css/bootstrap.min.css') }}" rel="stylesheet" type="text/css" />
      <link href="{{ asset('bundles/adminadmin/css/bootstrap-responsive.min.css') }}" rel="stylesheet" type="text/css" />
      <link href="{{ asset('bundles/adminadmin/css/font-awesome.css') }}" rel="stylesheet">
      <link href="http://fonts.googleapis.com/css?family=Open+Sans:400italic,600italic,400,600" rel="stylesheet">
      <link href="{{ asset('bundles/adminadmin/css/style.css') }}" rel="stylesheet" type="text/css">
      <link href="{{ asset('bundles/adminadmin/css/pages/signin.css') }}" rel="stylesheet" type="text/css">
   </head>
   <body>
      <div class="navbar navbar-fixed-top">
         <div class="navbar-inner">
            <div class="container">
               <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
               <span class="icon-bar"></span>
               <span class="icon-bar"></span>
               <span class="icon-bar"></span>
               </a>
               <a class="brand" href="{{ path('login') }}">
               {{ site_name }} : Admin Login
               </a>
               <div class="nav-collapse">
                  <ul class="nav pull-right">
                     <li class="">
                        <a href="#" class="">
                        Don't have an account?
                        </a>
                     </li>
                     <li class="">
                        <a href="{{ path('_index') }}" class="">
                        <i class="icon-chevron-left"></i>
                        Back to Homepage
                        </a>
                     </li>
                  </ul>
               </div>
               <!--/.nav-collapse -->
            </div>
            <!-- /container -->
         </div>
         <!-- /navbar-inner -->
      </div>
      <!-- /navbar -->
      <div class="account-container">
         <div class="content clearfix">
            <form action="{{ path('login_check') }}" method="post">
               <h1>Admin Login</h1>
               <div class="login-fields">
                  <p>Please provide your details</p>
                  {% block body %}
					{% if error %}
					<div class="alert alert-danger">
						{{
						  	error.message | replace({"Bad credentials": "Invalid username/password."})
						}}
					</div>

					{% endif %}
					{% endblock %}
                  <div class="field">
                     <label for="username">Username</label>
                     <input type="text" id="username" name="_username" value="{{ last_username }}" required placeholder="Username" class="login username-field" />
                  </div>
                  <!-- /field -->
                  <div class="field">
                     <label for="password">Password:</label>
                     <input type="password" id="password" name="_password" required placeholder="Password" class="login password-field"/>
                     <input type="hidden" name="_target_path" value="/admin/dashboard" />
                  </div>
                  <!-- /password -->
               </div>
               <!-- /login-fields -->
               <div class="login-actions">
                  <span class="login-checkbox">
                  <input id="Field" name="Field" type="checkbox" class="field login-checkbox" value="First Choice" tabindex="4" />
                  <label class="choice" for="Field">Keep me signed in</label>
                  </span>
                  <button class="button btn btn-success btn-large" name="submit">Sign In</button>
               </div>
               <!-- .actions -->
            </form>
         </div>
         <!-- /content -->
      </div>
      <!-- /account-container -->
      <div class="login-extra">
         <a href="#">Reset Password</a>
      </div>
      <!-- /login-extra -->
      <script src="{{ asset('bundles/adminadmin/js/jquery-1.7.2.min.js') }}"></script>
      <script src="{{ asset('bundles/adminadmin/js/bootstrap.js') }}"></script>
      <script src="{{ asset('bundles/adminadmin/js/bootstrap.js') }}"></script>
   </body>
</html>